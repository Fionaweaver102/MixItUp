
<header>
  <h1><%=@cocktail.title%></h1>
</header>
  <img src="<%= @cocktail.image %>" alt="cocktail"><br>


<ul>
  <% @cocktail.ingredients.all.each do |ingredient| %>
  <li><%= ingredient.name %></li>
  <% end %>
</ul>

<% @cocktail.cocktail_ingredients.each do |c| %>
<%= c.instructions %>
<% end %>

<%= @cocktail.user_id %>!!
<%= current_user.id %>

<% if @cocktail.user_id == current_user.id %>
  <button><%= link_to "Edit Cocktail", edit_user_cocktail_path(current_user) %></button>
  <%= form_tag user_cocktail_path(@cocktail.user_id), :method => "delete"  do %>
    <%= submit_tag "Delete Cocktail" %>
  <% end %>
<% end %>

