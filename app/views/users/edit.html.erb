<%= render partial: "/errors", locals: {instance: @user} %>

<%= form_for(@user) do |user| %>

  <%= user.label :first_name %>
  <%= user.text_field :first_name %>

  <%= user.label :last_name %>
  <%= user.text_field :last_name %>

  <%= user.label :email %>
  <%= user.text_field :email %>
  
  <%= user.hidden_field :password, value: @user.password %>

  <%= user.hidden_field :username, value: @user.username %>

  <%= user.submit %>

<% end %>
